{
  "homepage": "https://MikhailKolomoitsev.github.io/superhero-front",
  "name": "start-test",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@date-io/date-fns": "2.13.1",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/material": "^5.6.1",
    "@mui/x-date-pickers": "5.0.0-alpha.0",
    "@reduxjs/toolkit": "1.8.0",
    "@testing-library/jest-dom": "5.16.3",
    "@testing-library/react": "12.1.4",
    "@testing-library/user-event": "13.5.0",
    "axios": "^0.26.1",
    "formik": "^2.2.9",
    "gh-pages": "^3.2.3",
    "i18next": "21.6.14",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "6.2.2",
    "react-scripts": "5.0.0",
    "react-select": "5.2.2",
    "react-toastify": "^9.0.1",
    "react-transition-group": "^4.4.2",
    "uuid": "^8.3.2",
    "web-vitals": "2.1.4",
    "yup": "^0.32.11"
  },
  "scripts": {
  "predeploy": "npm run build",
     "deploy": "gh-pages -d build",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "(rm -rf build || :) && (rm -rf node_modules/* || :)",
    "jest": "react-scripts test --watchAll=false",
    "stylelint": "stylelint \"**/*.scss\"",
    "prettier": "prettier --check . --ignore-path ./.prettierignore",
    "eslint": "eslint \"**/*.{js,jsx}\" --ignore-path ./.eslintignore",
    "stylelint-fix": "stylelint --fix \"**/*.scss\"",
    "prettier-fix": "prettier . --write --ignore-path ./.prettierignore",
    "eslint-fix": "eslint \"**/*.{js,jsx}\" --fix --ignore-path ./.eslintignore",
    "code-style:check": "npm run stylelint && npm run prettier && npm run eslint",
    "freshinstall": "npm run clean && npm i"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.js",
      "!src/**/*.template.{js,jsx}",
      "!src/hocs/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "text-summary",
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "0.6.7",
    "enzyme": "3.11.0",
    "eslint": "8.12.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-only-warn": "1.0.3",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "node-sass": "7.0.1",
    "prettier": "2.6.1",
    "prop-types": "15.8.1",
    "stylelint": "14.6.1",
    "stylelint-config-standard": "25.0.0"
  }
}
